# cook your dish here
for tc in range(int(input())):
    
    n = int(input())
    
    temp = ''
    
    for i in range(n):
        
        temp += input()
        
        
    c = temp.count('c')
    o = temp.count('o')
    d = temp.count('d')
    e = temp.count('e')
    h = temp.count('h')
    f = temp.count('f')
    
    
    print(min(c//2,o,d,e//2,h,f))